  <template xmlns="http://ws.apache.org/ns/synapse" name="getBulkEmployeeData">
    <parameter name="jobPath"/>

    <sequence>
        <property value="application/json" name="accept" scope="transport"/>
        <property expression="fn:concat('Basic ',$ctx:ceridianDayForceAuthHeader)" name="Authorization"
                  scope="transport"/>
        <property name="uri.var.jobPath" expression="$func:jobPath"/>
        <property name="Accept-Encoding" scope="transport" action="remove"/>
        <filter source="$ctx:dayforceRestBlocking" regex="true">
            <then>
                <call blocking="true">
                    <endpoint>
                        <http method="get"
                              uri-template="https://{+uri.var.clientNamespace}/{uri.var.apiVersion}/EmployeeExportJobs/Data/{+uri.var.jobPath}">
                            <timeout>
                                <duration>{$ctx:httpRequestTimeout}</duration>
                                <responseAction>fault</responseAction>
                            </timeout>
                            <suspendOnFailure>
                                <errorCodes>-1</errorCodes>
                                <initialDuration>0</initialDuration>
                                <progressionFactor>1</progressionFactor>
                                <maximumDuration>0</maximumDuration>
                            </suspendOnFailure>
                            <markForSuspension>
                                <errorCodes>-1</errorCodes>
                            </markForSuspension>
                        </http>
                    </endpoint>
                </call>
                <log level="custom">
                    <property name="After" value="GetBulkEmployeeData"/>
                </log>
                <property value="application/json" name="accept" scope="transport"/>
                <property expression="fn:concat('Basic ',$ctx:ceridianDayForceAuthHeader)" name="Authorization"
                        scope="transport"/>
                <property name="Accept-Encoding" scope="transport" action="remove"/>
                <filter source="$axis2:HTTP_SC" regex="30.">
                    <then>
                        <log level="custom">
                            <property name="Received redirect response 30x" value="TRUE"/>
                        </log>
                        <property name="uri.var.httpendpointurl" expression="$trp:Location"/>
                        <log level="custom">
                            <property name="httpendpointurl" expression="$ctx:uri.var.httpendpointurl"/>
                        </log>
                        <call blocking="true">
                            <endpoint>
                                <http method="get"
                                      uri-template="{uri.var.httpendpointurl}">
                                    <timeout>
                                        <duration>{$ctx:httpRequestTimeout}</duration>
                                        <responseAction>fault</responseAction>
                                    </timeout>
                                    <suspendOnFailure>
                                        <errorCodes>-1</errorCodes>
                                        <initialDuration>0</initialDuration>
                                        <progressionFactor>1</progressionFactor>
                                        <maximumDuration>0</maximumDuration>
                                    </suspendOnFailure>
                                    <markForSuspension>
                                        <errorCodes>-1</errorCodes>
                                    </markForSuspension>
                                </http>
                            </endpoint>
                        </call>
                    </then>
                    <else>
                        <log level="custom">
                            <property name="No redirection, Returning" value="True"/>
                        </log>
                    </else>
                </filter>
                <log level="full" separator=","/>
                <log level="custom">
                    <property name="After" value="GetBulkEmployeeDataRedirection"/>
                </log>
                <property name="uri.var.nextpageurl" expression="json-eval($.Paging.Next)"/>
                <log level="custom">
                    <property name="nextpageurl" expression="$ctx:uri.var.nextpageurl"/>
                </log>
                <filter source="json-eval($.Paging.Next)" regex="http.*">
                    <then>
                        <log level="custom">
                            <property name="CERIDIAN Dayforce" value="Getting next page"/>
                        </log>
                        <call blocking="true">
                            <endpoint>
                                <http method="get"
                                uri-template="{uri.var.nextpageurl}">
                                    <timeout>
                                        <duration>{$ctx:httpRequestTimeout}</duration>
                                        <responseAction>fault</responseAction>
                                    </timeout>
                                    <suspendOnFailure>
                                        <errorCodes>-1</errorCodes>
                                        <initialDuration>0</initialDuration>
                                        <progressionFactor>1</progressionFactor>
                                        <maximumDuration>0</maximumDuration>
                                    </suspendOnFailure>
                                    <markForSuspension>
                                        <errorCodes>-1</errorCodes>
                                    </markForSuspension>
                                </http>
                            </endpoint>
                        </call>
                    </then>
                    <else>
                        <log level="custom">
                            <property name="CERIDIAN Dayforce" value="This is the last page"/>
                        </log>
                    </else>
                </filter>
                <log level="full" separator=","/>
            </then>
            <else>
                <call>
                    <endpoint>
                        <http method="get"
                              uri-template="https://{+uri.var.clientNamespace}/{uri.var.apiVersion}/EmployeeExportJobs/Data/{+uri.var.jobPath}">
                            <timeout>
                                <duration>{$ctx:httpRequestTimeout}</duration>
                                <responseAction>fault</responseAction>
                            </timeout>
                            <suspendOnFailure>
                                <errorCodes>-1</errorCodes>
                                <initialDuration>0</initialDuration>
                                <progressionFactor>1</progressionFactor>
                                <maximumDuration>0</maximumDuration>
                            </suspendOnFailure>
                            <markForSuspension>
                                <errorCodes>-1</errorCodes>
                            </markForSuspension>
                        </http>
                    </endpoint>
                </call>
                <log level="custom">
                    <property name="After" value="GetBulkEmployeeData"/>
                </log>
                <property value="application/json" name="accept" scope="transport"/>
                <property expression="fn:concat('Basic ',$ctx:ceridianDayForceAuthHeader)" name="Authorization"
                        scope="transport"/>
                <property name="Accept-Encoding" scope="transport" action="remove"/>
                <filter source="$axis2:HTTP_SC" regex="30.">
                    <then>
                        <log level="custom">
                            <property name="Received redirect response 30x" value="TRUE"/>
                        </log>
                        <property name="uri.var.httpendpointurl" expression="$trp:Location"/>
                        <log level="custom">
                            <property name="httpendpointurl" expression="$ctx:uri.var.httpendpointurl"/>
                        </log>
                        <call>
                            <endpoint>
                                <http method="get"
                                uri-template="{uri.var.httpendpointurl}">
                                    <timeout>
                                        <duration>{$ctx:httpRequestTimeout}</duration>
                                        <responseAction>fault</responseAction>
                                    </timeout>
                                    <suspendOnFailure>
                                        <errorCodes>-1</errorCodes>
                                        <initialDuration>0</initialDuration>
                                        <progressionFactor>1</progressionFactor>
                                        <maximumDuration>0</maximumDuration>
                                    </suspendOnFailure>
                                    <markForSuspension>
                                        <errorCodes>-1</errorCodes>
                                    </markForSuspension>
                                </http>
                            </endpoint>
                        </call>
                    </then>
                    <else>
                        <log level="custom">
                            <property name="No redirection, Returning" value="True"/>
                        </log>
                    </else>
                </filter>
                <sequence key="HandlePagination"/>
            </else>
        </filter>
    </sequence>
</template>