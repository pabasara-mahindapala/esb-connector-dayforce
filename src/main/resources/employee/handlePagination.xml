  <template xmlns="http://ws.apache.org/ns/synapse" name="handlePagination">
    <sequence>
        <filter regex="http.*" source="json-eval($.Paging.Next)">
            <then>
                <ceridiandayforce.processNextPage/>
            </then>
            <else>
                <log level="custom">
                    <property name="No next page" value="TRUE"/>
                </log>
                <filter regex="true" source="get-property('employees') != 'null' and get-property('employees') != ''">
                    <then>
                        <log level="custom">
                            <property name="Handling pagination" value="Completed"/>
                        </log>
                    </then>
                    <else>
                        <log level="custom">
                            <property name="No pagination needed" value="True"/>
                        </log>
                        <property expression="json-eval($.Data)" name="employees" scope="default" type="STRING"/>
                    </else>
                </filter>
                <payloadFactory media-type="json">
                    <format>
                    [$1]
                </format>
                    <args>
                        <arg evaluator="xml" expression="$ctx:employees"/>
                    </args>
                </payloadFactory>
            </else>
        </filter>
    </sequence>
</template>