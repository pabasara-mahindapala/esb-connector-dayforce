  <template xmlns="http://ws.apache.org/ns/synapse" name="processNextPage">
    <sequence>
        <property expression="json-eval($.Data)" name="firstPageData" scope="default" type="STRING"/>
        <property expression="json-eval($.Paging.Next)" name="uri.var.nextpageurl" scope="default" type="STRING"/>
        <log level="custom">
            <property expression="$ctx:uri.var.nextpageurl" name="nextpageurl"/>
        </log>
        <log level="custom">
            <property name="Getting next page" value="TRUE"/>
        </log>
        <property name="accept" scope="transport" type="STRING" value="application/json"/>
        <property expression="fn:concat('Basic ',$ctx:ceridianDayForceAuthHeader)" name="Authorization" scope="transport" type="STRING"/>
        <property action="remove" name="Accept-Encoding" scope="transport"/>
        <call>
            <endpoint>
                <http method="get" uri-template="{uri.var.nextpageurl}">
                    <timeout>
                        <duration>{$ctx:httpRequestTimeout}</duration>
                        <responseAction>fault</responseAction>
                    </timeout>
                    <suspendOnFailure>
                        <errorCodes>-1</errorCodes>
                        <initialDuration>0</initialDuration>
                        <progressionFactor>1</progressionFactor>
                        <maximumDuration>0</maximumDuration>
                    </suspendOnFailure>
                    <markForSuspension>
                        <errorCodes>-1</errorCodes>
                        <retriesBeforeSuspension>0</retriesBeforeSuspension>
                    </markForSuspension>
                </http>
            </endpoint>
        </call>
        <log level="custom">
            <property name="After" value="Getting next page"/>
        </log>
        <property expression="json-eval($.Data)" name="nextPageData" scope="default" type="STRING"/>
        <filter regex="\[\{.*" source="$ctx:employees">
            <then>
                <property expression="fn:concat($ctx:employees, ', ', $ctx:nextPageData)" name="employees" scope="default" type="STRING"/>
            </then>
            <else>
                <property expression="fn:concat($ctx:firstPageData, ', ', $ctx:nextPageData)" name="employees" scope="default" type="STRING"/>
            </else>
        </filter>
        <ceridiandayforce.handlePagination/>
    </sequence>
</template>